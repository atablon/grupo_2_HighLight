	<main class="main-body ">
		<!-- Bucador-->
		<section class="buscador">
			<div class="bkg-buscador container">
				<div class="box_buscador">
					<h2>Buscá el lugar perfecto
						para tú próxima campaña</h2>
				<!-- Busqueda del cartel y posterior redireccion al sitio resultado por medio del query string -->
					<form action="/resultado"> 

						<input type="text" name="busqueda_cartel" placeholder="Escribe el nombre del barrio, provincia …">
						<button type="submit" class="nav-search-btn" tabindex="3">
							<i class="fas fa-search"></i>
						</button>

					</form>
				</div>
			</div>
		</section>
		<!-- Productos-->
		<section class="lista-productos container">
			<h2>Carteles para campañas</h2>

			<div class="row no-gutters">

				<!-- LOGICA PARA IMPRIMIR LOS "RESULTADOS DE LAS BUSQUEDA" -->
				
				<% for(let i=0;i<cartelesDb.length;i++){ %>
					<div class="col-12 col-md-6  bloque_resultado">
						<a href="/detalle/<%= cartelesDb[i].id %>" > 
							<div class="row resultados_producto no-gutters">
								<div class="col-12">
									<div class="img_producto">
										<img src="/images/imagescartel/<%=cartelesDb[i].imagen%>" width="100%" alt="">
									</div>
								</div>
								<div class="col-12 producto_info">
									<div class="flex-probar">
										<div class="uno">
											<p class="p_costo">Valor mensual $<%= cartelesDb[i].valor%></p>
											
											<p class="estrellas">
												<!-- Loop para plotear las estrellas rellenas o vacias del puntaje del cartel -->
												<% for(let j=0;j<cartelesDb[i].estrellas;j++){ %>
													<span class="fa fa-star checked"></span>
												<%}
												for(j=cartelesDb[i].estrellas; j<5;j++){
												%>
													<span class="fa fa-star n_checked"></span>
												<%}%>

											</p>

											<p class="p_direccion"><%= cartelesDb[i].domiclioCartel %></p>
											
										</div>

										
									</div>

								</div>

							</div>
						</a>
					</div>
				<%}%>
				
