

<%- include('partials/head.ejs') %>
<%- include('partials/header_home.ejs') %>

	<main class="main-body ">
		<!-- Bucador-->
		<section class="buscador">
			<div class="bkg-buscador container">
				<div class="box_buscador">
					<h2>Buscá el lugar perfecto
						para tú próxima campaña</h2>
				<!-- Busqueda del cartel y posterior redireccion al sitio resultado por medio del query string -->
					<form action="/resultado"> 

						<input type="text" name="busqueda_cartel" placeholder="Escribe el nombre del barrio, provincia …">
						<button type="submit" class="nav-search-btn" tabindex="3">
							<i class="fas fa-search"></i>
						</button>

					</form>
				</div>
			</div>
		</section>
		<!-- Productos-->
		<section class="lista-productos container">
			<h2>Carteles Destacados</h2>
			<div class="row">
					<!-- LOGICA PARA IMPRIMIR LOS "RESULTADOS DE LAS BUSQUEDA" -->
					<% signStar.forEach(sign => {%>
					<div class="col-12 col-prod col-md-3">
						<a href="/detalle/<%= sign.id %>" > 
							<div class="producto">
								<div class="img_producto">
									<img src="/images/imagescartel/<%=sign.picture_filename%>" width="100%" alt="">
								</div>
								<div class="producto_info">
									<p class="estrellas">
										<!-- Loop para plotear las estrellas rellenas o vacias del puntaje del cartel -->
										<% for(let j=0;j<sign.star;j++){ %>
										<span class="fa fa-star checked"></span>
										<%}
										for(j=sign.star; j<5;j++){%>
										<span class="fa fa-star n_checked"></span>
										<%}%>													
									</p>
									<p><%=sign.address%> <%=sign.street_number%></p>
									<p><%=sign.city%>, <%=sign.state%></p>
									<p><strong>1 mes por $<%= sign.monthly_cost%></strong></p>
									
								</div>
							</div>
						</a>
					</div>
					<%}); %>
			</div>
	</section>

	<section class="lista-productos container">
		<h2>Encontrá la mejor promo para tu anuncio</h2>
		<div class="row">
			<% signSale.forEach(sign => {%>
			<div class="col-12 col-prod col-md-3">
				<a href="/detalle/<%= sign.id %>">
					<div class="producto">
						<div class="img_producto">
							<img src="/images/imagescartel/<%=sign.picture_filename%>" width="100%" alt="">
						</div>
						<div class="producto_info">
							<em class="tipo_cartel">En promoción</em>
										<p><%=sign.address%> <%=sign.street_number%></p>
							<p><%=sign.city%>, <%=sign.state%></p>
							<p><strong>1 mes por $<%= sign.monthly_cost%></strong></p>
	
						</div>
					</div>
				</a>
			</div>
			<%}); %>
		</div>
	</section>

	
		<section class="clientes">
			<h3>Todas estás pymes son parte de nuestros clientes</h3>
			<div class="container">
				<div class="row">
					<div class="col-6 col-prod col-md-2  offset-md-2">
						<img src="/images/mercado.svg" alt="HighLight" width="100%">
					</div>
					<div class="col-6 col-prod col-md-2 ">
						<img src="/images/coca.svg" alt="HighLight" width="100%">
					</div>
					<div class="col-6 col-prod col-md-2 ">
						<img src="/images/osde.svg" alt="HighLight" width="100%">
					</div>
					<div class="col-6 col-prod col-md-2 ">
						<img src="/images/digital.svg" alt="HighLight" width="100%">
					</div>
				</div>
			</div>
		</section>
	</main>
	<%- include('partials/footer.ejs') %>
