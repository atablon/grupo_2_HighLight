<%- include('partials/head.ejs') %>
<%- include('partials/header_small.ejs') %>

<main class="main-body">
    <div class="contenedor-main container">
        <h2 class="titulo-seccion">Publicar mi cartel</h2>

        <div class="box-view">
            <div class="box-container-view ">
                <form action="/crear/cartel" method="POST" class="ui-form">
                    <p class="titulo-content">
                        Ubicación del cartel
                    </p>
                    <p class="form-content">
                        
                    <label for="domiclioCarel">Domicilio apróximado:</label>
                        <input  id= "inputdireccion" type="text" name="domiclioCarel" required>
                        <em class="help">Ejemplo: Alberdi 8000</em>
                    </p>
                    <p class="form-content">
                        <label for="entreCalles1">Entre calle:</label>
                        <input placeholder="Calle 2" class = "input_50"type="text" name="entreCalles1" class="input-medum">
                    </p>
                   <p class="form-content">
                        <label for="entreCalles2">Y la calle:</label>
                        <input placeholder="Calle 2" class="input_50" type="text" name="entreCalles2" class="input-medum">
                    </p>
                    <p class="form-content">
                        <label for="ref-ubicacion">Referencias del lugar:</label>
                        <textarea name="ref-ubicacion"></textarea>
                    </p>
                    <p class="titulo-content margin">Detalle del cartel </p>
                    <p class="form-content">
                        <label for="tipoCartel">Tipo de cartel:</label>
                        <select name="Tipo de cartel" id="tipoCartel">
                            <option value="" selected disabled hidden> Seleccionar </option>
                            <option value="Cartel Led"> Cartel Led </option>
                            <option value="Cartel de Pantalla">Cartel de Pantalla</option>
                            <option value="Cartel de Ploteo "> Cartel de Ploteo </option>
                        </select>
                    </p>
                    <p class="form-content">
                        <label for="ClasifiacionCarte">Clasificación: </label>
                        <select name="ClasifiacionCartel">
                            <option value="" selected disabled hidden> Seleccionar </option>
                            <option value="Cartel de pared"> Cartel de pared</option>
                            <option value="Cartel de parada de colectivo">Cartel de parada de colectivo</option>
                            <option value="Cartel de ruta "> Cartel de ruta </option>
                            <option value="Cartel de autopista "> Cartel de autopista </option>
                            <option value="Cartel de tranporte público "> Cartel de tranporte público </option>
                        </select>
                    </p>
                    
                    <p class="titulo-content margin">
                        Medidas apróximadas
                    </p>
                    <p class="form-content input_50">
                        <label for="medidasCartelAncho">Ancho: </label>
                         <input class="small" placeholder="100 metros" type="number"  name="medidasCartelAncho">  
                    </p>
                    <p class="form-content input_50">
                        <label for="medidasCartelLargo">Largo: </label>
                        <input class="small" placeholder="100 metros" type="number" name="medidasCartelLargo">
                    </p>

                   
                    <div class="box-buttom">
                       <button type="submit" class ="btn">Publicar</button>
                    </div>
                </form>
              
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer.ejs') %>