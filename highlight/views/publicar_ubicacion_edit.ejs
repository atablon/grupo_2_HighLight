<%- include('partials/head.ejs') %>
<%- include('partials/header_small.ejs') %>

<main class="main-body">
    <div class="contenedor-main container">
        <h2 class="titulo-seccion">Modificar cartel</h2>

        <div class="box-view">
            <div class="box-container-view ">
                <form action="/products/editar/<%= productSelect.id %>?_method=PUT" method="POST" class="ui-form">                    <p class="titulo-content">
                        Ubicación del cartel
                    </p>
                    <p class="form-content">

                        <label for="domiclioCartel">Domicilio apróximado:</label>
                        <input value="<%= productSelect.domiclioCartel %>" id="inputdireccion" placeholder="Avenida Corrientes" type="text" name="domiclioCartel"
                            required>
                    </p>
                    <p class="form-content">

                        <label for="numero">Número o altura de calle:</label>
                        <input value="<%= productSelect.numero %>" id="numero" type="number" name="numero" required>
                    </p>


                    <p class="form-content">
                        <label for="entreCalles1">Entre calle:</label>
                        <input value="<%= productSelect.entreCalles1 %>" required class="input_50" type="text" name="entreCalles1"
                            class="input-medum">
                    </p>
                    <p class="form-content">
                        <label for="entreCalles2">Y la calle:</label>
                        <input value="<%= productSelect.entreCalles2 %>" required class="input_50" type="text" name="entreCalles2"
                            class="input-medum">
                    </p>
                    <p class="form-content">
                        <!--aca puedo tener un array de barrios e imprimir en un combo.-->
                        <label for="barrio">Barrio o localidad:</label>
                        <input   value="<%= productSelect.barrio %>"  id="barrio" type="text" name="barrio" required>
                    </p>
                    <p class="form-content">
                        <label for="provincia">Provincia:</label>
                        <input  value="<%= productSelect.provincia %>" id="provincia" type="text" name="provincia" required>
                    </p>
                    <p class="form-content">
                        <label for="refubicacion">Referencias del lugar:</label>
                        <textarea name="refubicacion" required> <%= productSelect.refubicacion %></textarea>
                    </p>

                        <p class="form-content">
                        <label for="imagen">Imagen:</label>
                        <input  type="image"  name="imagen" id="imagen" src="/images/imagescartel/<%= productSelect.imagen %>">
                    </p>
                   
                    <div class="box-buttom">
                        <button type="submit" class="btn">Continuar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</main>

<%- include('partials/footer.ejs') %>