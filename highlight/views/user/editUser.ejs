<main class="main-body">
    <div class="contenedor-main container">
        <h2 class="titulo-seccion"> Modificá tus datos</h2>

        <div class="box-view">
            <div class="box-container-view ">
                <form method="POST" action="/users/registro" enctype="multipart/form-data" class="formBase">
                    <p class="form-content">
                        <label for="name">Nombre de usuario: </label>
                        <input type="text" id="name" name="user_name" value="<%=user[0].user_name%>" >
                    </p>
                    <p class="form-content">
                        <label for="registro">Quiero:</label>
                        <select id="registro" name="user_type">
                            <option value="Publicar" <%= 1 == user.user_type ? "selected" : "" %>> Publicar </option>
                            <option value="Alquilar" <%= 1 == user.user_type ? "selected" : "" %>> Alquilar </option>
                            <option value="Publicar y alquilar" <%= 1 == user.user_type ? "selected" : "" %>> Publicar y alquilar </option>
                        </select>
                    </p>


                    <p class="form-content">
                        <label for="mail">E-mail:</label>
                        <input type="email" id="mail" name="email" value="<%=user[0].email%>">
                    </p>

                    <p class="form-content"><label for="avatar">Foto de perfil:</label>
                        <input type="file" id="avatar" name="profile_picture">
                    </p>

                    <p class="form-content"><label for="pass">Contraseña:</label>
                        <input type="password" id="pass" name="pass" value="<%=user[0].user_password%>">
                        <em class="help">Debe tener un número + un caracter</em>
                    </p>
                    <p class="form-content"><label for="pass2">Repetir contraseña:</label>
                        <input type="password" id="pass2" name="rpass"  value="<%=user[0].user_password%>" >
                    </p>


                    <div class="box-buttom">
                        <button type="submit" class="btn"> Modificar </button>
                    </div>


                </form>

            </div>
        </div>

</main>
