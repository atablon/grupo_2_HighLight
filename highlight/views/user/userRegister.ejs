
    <%- include('../partials/head.ejs') %>

    <%- include('../partials/header_small.ejs') %>
            
    <main class="main-body">
    <div class="contenedor-main container">
        <h2 class="titulo-seccion"> Completá los datos</h2>
        <div class="box-view">
            <div class="box-container-view ">
            
                <form method="POST" action="/users/registro" enctype="multipart/form-data" class="formBase" id="publishForm" >
                <span class="feedback " id="feedbackForm"> </span>

                    <p class="form-content">
                        <label for="name">Nombre de usuario: </label>
                        <input type="text" id="name" name="user_name" data-type="nombre de usuario">
                        <span class="feedback"></span>
                    </p>
                    <p class="form-content">
                        <label for="registro">Quiero:</label>
                      <select id="registro" name="user_type" data-type="quiero">
                        <option value="" selected disabled hidden> Seleccionar </option>
                          <option> Publicar </option>
                         <option> Alquilar </option>
                         <option> Publicar y alquilar </option>

                      </select>
                    <span class="feedback"></span>
                    </p>
                   

                    <p class="form-content">
                        <label for="mail">E-mail:</label>
                        <input type="email" id="mail" name="email" placeholder="juan@gmail.com" data-type="e-mail">
                        <span class="feedback"></span>
                    </p>

                    <p class="form-content">
                        <label for="avatar">Foto de perfil:</label>
                        <input type="file" id="avatar" name="profile_picture" data-type="imagen">
                        <span class="feedback"></span>
                    </p>

                    <p class="form-content">
                        <label for="pass">Contraseña:</label>
                        <input type="password" id="pass" name="pass" data-type="password">
                        <em class="help">Debe tener un número + un caracter</em>
                        <span class="feedback"></span>
                    </p>
                    <p class="form-content">
                        <label for="pass2">Repetir contraseña:</label>
                        <input type="password" id="pass2" name="pass2" data-type="password">
                   
                        <span class="feedback"></span>
                    </p>

                    
                    <div class="box-buttom">
                    <button type="submit" class ="btn"> Registrarme </button>
                    </div>


                </form>

            </div>
            </div>

</main>
    <%- include('../partials/footer.ejs') %>
